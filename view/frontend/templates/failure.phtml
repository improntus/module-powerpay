/** @var $block \Improntus\PowerPay\Block\Onepage\Failure */
/** @var $escaper \Magento\Framework\Escaper */
?>
<?php if ($block->getRealOrderId()) :?>
<?php $order = $block->getOrderData() ?>
    <p><?= $block->escapeHtml(__('Order #') . $block->getRealOrderId()) ?></p>
<p><strong><?= $escaper->escapeHtml((__("Total: "))) . '</strong>' . $escaper->escapeHtml($order->getGrandTotal()) ?></p>

<?php endif ?>
<?php if ($error = $block->getErrorMessage()) :?>
    <p><strong><?= $block->escapeHtml($error) ?></strong></p>
<?php endif ?>
<p><?= $block->escapeHtml(
        __('Click <a href="%1">here</a> to continue shopping.', $block->escapeUrl($block->getContinueShoppingUrl())),
        ['a']
    ) ?>
</p>
